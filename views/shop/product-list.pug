extends ../layouts/layout.pug

block styles
    link(rel="stylesheet", href="/css/card.css")

block content
    main
        h1 My Products
        p List of all the products
        if products.length > 0
            each product in products
                .card
                    .card-header
                        span #{product.title}
                    .card-image
                        img(src="", alt="")
                    .card-body 
                        .card-body-details
                            p #{product.description}
                            span #{product.price}
                        .card-body-controls
                            - var url = "/products/" + product.id
                            a(href=url) View Product
                            button Add To Chart
        else
            p No Products Available...